<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:weightSum="100.0">


    <EditText
        android:id="@+id/name_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/name_insert"
        android:textAlignment="viewStart"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="51dp"
        app:layout_constraintBottom_toTopOf="@+id/sex_field"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"/>


    <Spinner
        android:id="@+id/sex_spinner"
        android:layout_width="93dp"
        android:layout_height="28dp"
        app:layout_constraintLeft_toRightOf="@+id/sex_field"
        android:layout_marginLeft="201dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toTopOf="@+id/age_spinner"/>

    <TextView
        android:id="@+id/sex_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sex_insert"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="57dp"
        app:layout_constraintBottom_toTopOf="@+id/age_field"/>

    <TextView
        android:id="@+id/age_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age_insert"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/weight_field"/>

    <Spinner
        android:id="@+id/age_spinner"
        android:layout_width="94dp"
        android:layout_height="23dp"
        app:layout_constraintLeft_toRightOf="@+id/age_field"
        android:layout_marginLeft="199dp"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toTopOf="@+id/weight"/>

    <TextView
        android:id="@+id/weight_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight_insert"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginBottom="81dp"
        app:layout_constraintBottom_toTopOf="@+id/sport_field"/>

    <EditText
        android:id="@+id/weight"
        android:layout_width="99dp"
        android:layout_height="29dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/weight_field"
        android:layout_marginLeft="125dp"
        android:layout_marginBottom="69dp"
        app:layout_constraintBottom_toTopOf="@+id/sport_time"/>

    <TextView
        android:id="@+id/sport_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sport_insert"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="123dp"/>

    <EditText
        android:id="@+id/sport_time"
        android:layout_width="99dp"
        android:layout_height="29dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintLeft_toRightOf="@+id/sport_field"
        android:layout_marginLeft="43dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="110dp"/>


</android.support.constraint.ConstraintLayout>